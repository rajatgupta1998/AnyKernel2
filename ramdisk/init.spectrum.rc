   write /sys/devices/soc.0/qcom,bcl.57/hotplug_mask 12
   write /sys/devices/soc.0/qcom,bcl.57/hotplug_soc_mask 15
   # set core_ctl parameters
   write /sys/devices/system/cpu/cpu0/core_ctl/min_cpus 2
   write /sys/devices/system/cpu/cpu0/core_ctl/max_cpus 4
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres 22
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres 8
   write /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster 1
   # GPU
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/governor msm-adreno-tz
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/max_freq 550000000
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/min_freq 240000000
   # input boost
   write /sys/module/cpu_boost/parameters/input_boost_enabled 0
   # touch boost
   write /sys/module/msm_performance/parameters/touchboost 1

