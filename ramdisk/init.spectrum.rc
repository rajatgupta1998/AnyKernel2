# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implimentation inspired by Franco's fku profiles

# Initialization
on property:sys.boot_completed=1
   # Set default profile on first boot
   # Executed under three different contexts to make sure it fires properly
   exec u:r:init:s0 root root -- /init.spectrum.sh
   exec u:r:su:s0 root root -- /init.spectrum.sh
   exec u:r:supersu:s0 root root -- /init.spectrum.sh
   # Enable Spectrum support
   setprop spectrum.support 1
   # Add kernel name
   setprop persist.spectrum.kernel Loony

# Balance (default profile)
on property:persist.spectrum.profile=0
   # disable core_control to update governor settings
   write /sys/module/msm_thermal/core_control/enabled 0
   # big cluster
   write /sys/devices/system/cpu/cpu0/online 1
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor katnap
   write /sys/devices/system/cpu/cpu0/cpufreq/katnap/above_hispeed_delay "0 1440000:20000"
   write /sys/devices/system/cpu/cpu0/cpufreq/katnap/max_freq_hysteresis 0
   write /sys/devices/system/cpu/cpu0/cpufreq/katnap/hispeed_freq 960000
   write /sys/devices/system/cpu/cpu0/cpufreq/katnap/boost 0
   write /sys/devices/system/cpu/cpu0/cpufreq/katnap/boostpulse_duration 0
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1516800
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 345600
   # LITTLE cluster
   write /sys/devices/system/cpu/cpu4/online 1
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor katnap
   write /sys/devices/system/cpu/cpu4/cpufreq/katnap/above_hispeed_delay 0
   write /sys/devices/system/cpu/cpu4/cpufreq/katnap/max_freq_hysteresis 0
   write /sys/devices/system/cpu/cpu4/cpufreq/katnap/hispeed_freq 998400
   write /sys/devices/system/cpu/cpu4/cpufreq/katnap/boost 0
   write /sys/devices/system/cpu/cpu4/cpufreq/katnap/boostpulse_duration 0
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1209600
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 307200
   # enable core_control now
   write /sys/module/msm_thermal/core_control/enabled 1
   # set core_ctl parameters
   write /sys/devices/system/cpu/cpu0/core_ctl/min_cpus 1
   write /sys/devices/system/cpu/cpu0/core_ctl/max_cpus 4
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres 29
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres 14
   write /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster 1
   # GPU
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/governor msm-adreno-tz
   # input boost
   write /sys/module/cpu_boost/parameters/input_boost_enabled 1
   write /sys/module/cpu_boost/parameters/input_boost_frequency "0:960000 4:883200 5:883200 6:883200 7:883200"
   # touch boost
   write /sys/module/msm_performance/parameters/touchboost 0

# Performance
on property:persist.spectrum.profile=1
   # disable core_control to update governor settings
   write /sys/module/msm_thermal/core_control/enabled 0
   # big cluster
   write /sys/devices/system/cpu/cpu0/online 1
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor ondemand
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1651200
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 345600
   # LITTLE cluster
   write /sys/devices/system/cpu/cpu4/online 1
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor ondemand
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1209600
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 307200
   # enable core_control now
   write /sys/module/msm_thermal/core_control/enabled 1
   # set core_ctl parameters
   write /sys/devices/system/cpu/cpu0/core_ctl/min_cpus 2
   write /sys/devices/system/cpu/cpu0/core_ctl/max_cpus 4
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres 22
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres 8
   write /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster 1
   # GPU
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/governor msm-adreno-tz
   # input boost
   write /sys/module/cpu_boost/parameters/input_boost_enabled 0
   # touch boost
   write /sys/module/msm_performance/parameters/touchboost 1

# Battery
on property:persist.spectrum.profile=2
   # disable core_control to update governor settings
   write /sys/module/msm_thermal/core_control/enabled 0
   # big cluster
   write /sys/devices/system/cpu/cpu0/online 1
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor powersave
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1344000
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 345600
   # LITTLE cluster
   write /sys/devices/system/cpu/cpu4/online 1
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor powersave
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1094400
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 307200
   # enable core_control now
   write /sys/module/msm_thermal/core_control/enabled 1
   # set core_ctl parameters
   write /sys/devices/system/cpu/cpu0/core_ctl/min_cpus 0
   write /sys/devices/system/cpu/cpu0/core_ctl/max_cpus 2
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres 98
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres 95
   write /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster 1
   # GPU
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/governor powersave
   # input boost
   write /sys/module/cpu_boost/parameters/input_boost_enabled 0
   # touch boost
   write /sys/module/msm_performance/parameters/touchboost 0

# Gaming
on property:persist.spectrum.profile=3
   # disable core_control to update governor settings
   write /sys/module/msm_thermal/core_control/enabled 0
   # big cluster
   write /sys/devices/system/cpu/cpu0/online 1
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor performance
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1651200
   write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 1516800
   # LITTLE cluster
   write /sys/devices/system/cpu/cpu4/online 1
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor performance
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq 1209600
   write /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq 1099400
   # enable core_control now
   write /sys/module/msm_thermal/core_control/enabled 1
   # set core_ctl parameters
   write /sys/devices/system/cpu/cpu0/core_ctl/min_cpus 4
   write /sys/devices/system/cpu/cpu0/core_ctl/max_cpus 4
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_up_thres 0
   write /sys/devices/system/cpu/cpu0/core_ctl/busy_down_thres 0
   write /sys/devices/system/cpu/cpu0/core_ctl/is_big_cluster 1
   # GPU
   write /sys/class/devfreq/1c00000.qcom,kgsl-3d0/governor performance
   # input boost
   write /sys/module/cpu_boost/parameters/input_boost_enabled 0
   # touch boost
   write /sys/module/msm_performance/parameters/touchboost 1
